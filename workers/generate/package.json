{
  "name": "creator-tool-hub-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for Creator Tool Hub with user data storage",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:safe": "./deploy-safe.sh",
    "secrets:list": "wrangler secret list",
    "secrets:put:gemini": "wrangler secret put GEMINI_API_KEY",
    "secrets:put:autumn": "wrangler secret put AUTUMN_SECRET_KEY",
    "db:create": "wrangler d1 create creator-tool-hub-db",
    "db:migrate": "wrangler d1 migrations apply creator-tool-hub-db",
    "db:migrate:local": "wrangler d1 migrations apply creator-tool-hub-db --local",
    "r2:create": "wrangler r2 bucket create creator-tool-hub-user-data"
  },
  "dependencies": {
    "autumn-js": "^0.1.33"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}
